<Window x:Class="Job_Manager.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Job_Manager"
        mc:Ignorable="d"
        Title="SplashScreen" Height="300" Width="300" ResizeMode="NoResize" WindowStyle="None"  
            WindowStartupLocation="CenterScreen"  BorderThickness="5" BorderBrush="AliceBlue" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblMainLabel" Content="Job Manager Loading.." Style="{StaticResource Style_LoginMainHeading}"></Label>
        <Image Source="Icons\Material_Management.png" Grid.Row="1" Grid.RowSpan="2"></Image>
    </Grid>
</Window>

    