        <Setter Property="CanUserAddRows" Value="False"></Setter>
        <Setter Property="GridLinesVisibility" Value="Horizontal"></Setter>
        <Setter Property="CanUserDeleteRows" Value="False"></Setter>
        <Setter Property="CanUserReorderColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeColumns" Value="False"></Setter>
        <Setter Property="AutoGenerateColumns" Value="False"></Setter>
        <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
        <Setter Property="Margin" Value="6 0 8 0"></Setter>
        <Setter Property="BorderBrush" Value="#B5B5B5"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="ColumnHeaderStyle" Value="{DynamicResource CustomHeader}"></Setter>
        <Setter Property="MinRowHeight" Value="28"></Setter>
        <Setter Property="RowStyle" Value="{DynamicResource CustomRowStyle}"></Setter>
        <Setter Property="CellStyle" Value="{DynamicResource CustomCellStyle}"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGrid}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="DG_ScrollViewer" Focusable="false" Padding="0">
                            <ScrollViewer.Template>
                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!--Column Headers-->
                                        <DataGridColumnHeadersPresenter Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" x:Name="PART_ColumnHeadersPresenter"
                                            Visibility="{Binding HeadersVisibility,
                                            ConverterParameter={x:Static DataGridHeadersVisibility.Column}, 
                                            Converter={x:Static DataGrid.HeadersVisibilityConverter}, 
                                            RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                        <!--/Column Headers-->

                                        <!--ScrollContent-->
                                        <ScrollContentPresenter Grid.Row="1"  Grid.Column="0"  x:Name="PART_ScrollContentPresenter"
                                                        CanContentScroll="{TemplateBinding CanContentScroll}"
                                                        />
                                        <!--/ScrollContent-->

                                        <!--Vertical Scrollbar-->
                                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                           Grid.Column="1"
                                           Maximum="{TemplateBinding ScrollableHeight}"
                                           Orientation="Vertical"
                                           Grid.Row="1"
                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                           ViewportSize="{TemplateBinding ViewportHeight}"/>
                                        <!--/Vertical Scrollbar-->
                                    </Grid>
                                </ControlTemplate>
                            </ScrollViewer.Template>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="70"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--DataGrid content-->
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        Grid.Row="0" />
                                <!--/DataGrid content-->

                                <!--Summary Details-->
                                <Grid Grid.Row="1" Background="#F6F6F6" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="180"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Grid.Column="0" Stroke="White"></Rectangle>
                                    <Rectangle Grid.Column="1" Stroke="White"></Rectangle>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.7*"></ColumnDefinition>
                                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                                            <ColumnDefinition Width="10"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Grid.Row="0"  BorderThickness="1 1 0 1" BorderBrush="White"></Border>
                                        <Border Grid.Column="1" Grid.Row="0" BorderThickness="0 1 0 1" BorderBrush="White"></Border>
                                        <Border Grid.Column="2" Grid.Row="0" BorderThickness="0 1 1 1" BorderBrush="White"></Border>


                                        <Border Grid.Column="0" Grid.Row="1" BorderThickness="1 1 0 1"  BorderBrush="White"></Border>
                                        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0 1 0 1" BorderBrush="White"></Border>
                                        <Border Grid.Column="2" Grid.Row="1" BorderThickness="0 1 1 1" BorderBrush="White"></Border>

                                        <Border Grid.Column="0" Grid.Row="2" BorderThickness="1 1 0 1"  BorderBrush="White"></Border>
                                        <Border Grid.Column="1" Grid.Row="2" BorderThickness="0 1 0 1" BorderBrush="White"></Border>
                                        <Border Grid.Column="2" Grid.Row="2" BorderThickness="0 1 1 1" BorderBrush="White"></Border>

                                        <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource SummaryLabel}"   Content="Billable Time :"></Label>
                                        <Label Grid.Column="1" Grid.Row="0" Style="{StaticResource SummaryValue}"  Content="{Binding Billable}"></Label>

                                        <Label Grid.Column="0" Grid.Row="1" Style="{StaticResource SummaryLabel}"   Content="Non Billable Time :"></Label>
                                        <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource SummaryValue}"  Content="{Binding Nonbillable}"></Label>

                                        <Label Grid.Column="0" Grid.Row="2" Style="{StaticResource TotalHoursLabel}" Content="Total Hours :"></Label>
                                        <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource TotalHoursValue}" Content="{Binding TotalHours}"></Label>
                                    </Grid>
                                </Grid>
                                <!--/Summary Details-->
                            </Grid>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
