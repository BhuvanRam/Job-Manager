<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <Style x:Key="Header" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="48"></Setter>
    </Style>
    <Style x:Key="HeaderContent" TargetType="{x:Type Grid}">
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
    </Style>
  
    <Style x:Key="Content" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="0.9*"></Setter>
    </Style>
    <Style x:Key="FooterRow" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="0.11*"></Setter>
    </Style>
    <Style x:Key="HeaderRow" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="0.2*"></Setter>
    </Style>
    <Style x:Key="InputFields" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="Auto"></Setter>
    </Style>
    <Style x:Key="FooterSection" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="Auto"></Setter>
    </Style>
    <Style x:Key="Container" TargetType="{x:Type RowDefinition}">
        <Setter Property="Height" Value="*"></Setter>
    </Style>
    <Style x:Key="HorizontalPanel" TargetType="{x:Type StackPanel}">
