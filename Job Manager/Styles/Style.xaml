    <Style x:Key="FooterRight" TargetType="StackPanel">
        <Setter Property="Margin" Value="10 5 10 0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
    </Style>
    <Style x:Key="FullWidth" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="Height" Value="Auto"></Setter>
        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
    </Style>
    <Style x:Key="KeyLogoSection" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="140*"></Setter>
    </Style>
    <Style x:Key="InputSection" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="450*"></Setter>
    </Style>
    <Style x:Key="PlainTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Width" Value="367"></Setter>
        <Setter Property="Height" Value="35"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="FontSize" Value="13"></Setter>
        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
        <Setter Property="Margin" Value="10 13 8 5"></Setter>
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="AllowDrop" Value="true"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
    </Style>
    <Style x:Key="PlainPasswordBox" TargetType="{x:Type PasswordBox}">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
        <Setter Property="Width" Value="367"></Setter>
        <Setter Property="Height" Value="35"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="FontSize" Value="13"></Setter>
        <Setter Property="Margin" Value="10 13 8 5"></Setter>
        <Setter Property="PasswordChar" Value="●"/>
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="AllowDrop" Value="true"/>

        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
    </Style>
    <Style x:Key="Password" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource ResourceKey=PlainPasswordBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Microsoft_Windows_Themes:ListBoxChrome BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/DovicoTimeEntry.WindowsApp;component/Images/icons/password.png" Height="20" Width="35" Stretch="None"></Image>
                            <Label x:Name="lblWatermark" Content="Password" Visibility="Collapsed" Foreground="#565656" VerticalAlignment="Center"></Label>
                            <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalContentAlignment="Bottom" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Microsoft_Windows_Themes:ListBoxChrome>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="VM:SetupViewModel.BoundPassword" Value=""></Condition>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ContentHost"></Setter>
                        </MultiTrigger>
                        <Trigger Property="IsFocused" Value="True" >
                            <Setter Property="Visibility" Value="Collapsed" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Visible" TargetName="PART_ContentHost"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Username" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=PlainTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Microsoft_Windows_Themes:ListBoxChrome BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/DovicoTimeEntry.WindowsApp;component/Images/icons/user.png" Height="20" Width="35" Stretch="None"></Image>
                            <Label x:Name="lblWatermark" Content="User Name"  Visibility="Collapsed" Foreground="#565656" VerticalAlignment="Center"></Label>
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalContentAlignment="Bottom" VerticalAlignment="Center">
                            </ScrollViewer>
                        </StackPanel>
                    </Microsoft_Windows_Themes:ListBoxChrome>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""></Condition>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ContentHost"></Setter>
                        </MultiTrigger>
                        <Trigger Property="IsFocused" Value="True" >
                            <Setter Property="Visibility" Value="Collapsed" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Visible" TargetName="PART_ContentHost"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Company" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=PlainTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Microsoft_Windows_Themes:ListBoxChrome BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/DovicoTimeEntry.WindowsApp;component/Images/icons/company.png" Height="20" Width="35" Stretch="None"></Image>
                            <Label x:Name="lblWatermark" Content="Company Name" Visibility="Collapsed" Foreground="#565656" VerticalAlignment="Center"></Label>
                            <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalContentAlignment="Bottom" VerticalAlignment="Center">
                            </ScrollViewer>
                        </StackPanel>
                    </Microsoft_Windows_Themes:ListBoxChrome>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""></Condition>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ContentHost"></Setter>
                        </MultiTrigger>
                        <Trigger Property="IsFocused" Value="True" >
                            <Setter Property="Visibility" Value="Collapsed" TargetName="lblWatermark"></Setter>
                            <Setter Property="Visibility" Value="Visible" TargetName="PART_ContentHost"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PlainLabel" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
        <Setter Property="FontSize" Value="13"></Setter>
        <Setter Property="MinHeight" Value="30"></Setter>
        <Setter Property="Width" Value="470"></Setter>
        <Setter Property="Margin" Value="0 0 0 5"></Setter>


        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>

        <Setter Property="VerticalContentAlignment" Value="Center"/>

    </Style>
    <Style x:Key="Error" TargetType="{x:Type Label}" BasedOn="{StaticResource ResourceKey=PlainLabel}">
        <Setter Property="Foreground" Value="#ef243e"/>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Width" Value="Auto"></Setter>
        <Setter Property="Margin" Value="0 0 8 0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="true" VerticalAlignment="Stretch" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"></ColumnDefinition>
                            <ColumnDefinition Width="{TemplateBinding Width}"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/DovicoTimeEntry.WindowsApp;component/Images/icons/error.png" Height="15" Width="35" Stretch="Uniform" VerticalAlignment="Center"></Image>
                        <TextBlock Grid.Column="1" TextWrapping="Wrap" Width="{TemplateBinding Width}" MaxWidth="{TemplateBinding MaxWidth}"  Text="{TemplateBinding Content}" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=ErrorMessage}" Value="">
                <Setter Property="Visibility" Value="Hidden"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
