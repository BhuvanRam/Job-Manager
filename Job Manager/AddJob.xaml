<Window x:Class="Job_Manager.AddJob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Job_Manager"
        mc:Ignorable="d"
        Title="AddJob" Height="300" Width="300">
    <Grid>
        <Canvas Name="SearchCanvas">
            <Label Name="lblName" Content="Job Name:" Canvas.Top="5" Canvas.Left="10"></Label>
            <TextBox Name="txtJobName" Canvas.Top="10" Canvas.Left="120" Width="100"></TextBox>
            <Label Name="lblCreatedBy" Content="Created By:" Canvas.Top="35" Canvas.Left="10"></Label>
            <TextBox Name="txtCreatedBy" Canvas.Top="35" Canvas.Left="120" Width="100" IsReadOnly="True"></TextBox>
            <Label Name="lblCreatedOn" Content="Created On:" Canvas.Top="65" Canvas.Left="10"></Label>
            <TextBox Name="txtCreatedOn" Canvas.Top="65" Canvas.Left="120" Width="100" IsReadOnly="True"></TextBox>
        </Canvas>
        <Canvas Name="BottonCanvas">
            <Button Name="btnSave" Content="_Save" Click="btnSave_Click" Canvas.Bottom="10" Canvas.Left="120"></Button>
            <Button Name="btnCancel" Content="_Cancel"  Click="btnCancel_Click"  Canvas.Bottom="10" Canvas.Left="180"></Button>
        </Canvas>
    </Grid>
</Window>
