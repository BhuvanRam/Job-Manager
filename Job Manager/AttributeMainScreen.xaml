<Window x:Class="Job_Manager.AttributeMainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Job_Manager"
        mc:Ignorable="d"
        Title="AttributeMainScreen" Height="600" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label x:Name="lblHeading"  Content="Attribute List" Width="60" HorizontalAlignment="Left"></Label>
            <Button x:Name="bAddAttribute" Content="Add Attribute" Width="100" HorizontalAlignment="Left" Click="bAddAttribute_Click"></Button>
        </StackPanel>
       
        <DataGrid x:Name="dgAttributeGrid" Grid.Row="1" >
        </DataGrid>
    </Grid>
</Window>
